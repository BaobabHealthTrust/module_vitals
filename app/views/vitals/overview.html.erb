<html>
    <head>
        <style type="text/css">
          body {
            -moz-user-select:none;
            font-family: "Nimbus Sans L", "Arial Narrow", sans-serif;
          }

          #stats {
            width:98%;
            border:1px solid #eee;
            margin:10px;
            margin-top: 0px;
            background:white;
          }
          #stats td, #stats th {
            text-align:center;
          }
          .odd {
            background-color: #eeeef7;
          }
          .even {
            background-color: #fff;
          }

          #table_div {
            overflow:auto;
            height: 320px;
            background-color: white;
            border: solid 1px #eee;
            border-width: 1px;
            overflow: hidden;
          }

          .btn {
            min-height: 50px;
            margin: 0px;
            margin-bottom: 5px;
            font-size: 1.2em;
            background-color: #4B6458;
            color: #FFF;
            font-weight: normal;
            border: 5px outset #000;
            padding: 10px;
            cursor: pointer;
            background:url(../images/btn_blue.png) right repeat;
            -moz-user-select:none;
            -moz-user-focus:disabled;
          }

          .btn:hover {
            background:url(../images/btn_blue_hover.png) right repeat;
            -moz-user-select:none;
            -moz-user-focus:disabled;
          }

          .btn:active {
            background:url(../images/btn_yellow.png) right repeat;
            border: 3px inset #000;
          }

        </style>

    </head>
    <body>
    
      <div id="tab" style="background-color: #fff; border-top: 1px #fff solid; margin-top: 0px;">
        <h2 style="text-align: center; color: #4B6458; margin-top: -2px; margin-bottom: 0px;">Current Patient Statistics</h2>
        <table id="stats" style="margin-bottom: 8px;" cellpadding="10">
          <tr style="color: #fff; background-color: #4B6458;">
            <th style="text-align:left;">Task Type</th>
            <th>Me</th>
            <th>Today</th>
            <th>This Year</th>
            <th>Total to Date</th>
          </tr>
          <% @types.each do |type| %>
            <tr class="<%= cycle('even', 'odd') %>">
              <td style="text-align:left;"><%= type.titleize %></td>
              <td><%= @me[type] %></td>
              <td><%= @today[type] %></td>
              <td><%= @year[type] %></td>
              <td><%= @ever[type] %></td>
            </tr>
          <% end %>
        </table>
      </div>
      
    </body>
</html>
